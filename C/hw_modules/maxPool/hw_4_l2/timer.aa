$storage count : $uint<64>

$module [timerDaemon] $in () $out () $is
{
    $branchblock [body]
    {
    $dopipeline $depth 3 $fullrate
    $merge $entry $loopback
        $phi ncount := ($bitcast($uint<64>) 0) $on $entry (ncount+1) $on $loopback
    $endmerge
    count := ncount
    $while 1
    }
}

$module [timer] $in () $out (c : $uint<64>) $is
{
    c := count
}