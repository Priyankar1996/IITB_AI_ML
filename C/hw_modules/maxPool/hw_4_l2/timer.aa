$pipe count : $uint<64> $depth 1

$module [timerDaemon] $in () $out () $is
{
    $branchblock [body]
    {
    $dopipeline $depth 3 $fullrate
    $merge $entry $loopback
        $phi ncount := ($bitcast($uint<64>) 0) $on $entry count $on $loopback
    $endmerge
    count := (ncount + 1)
    $while 1
    }
}

$module [timer] $in () $out (c : $uint<64>) $is
{
    c := count
    count := c
}
