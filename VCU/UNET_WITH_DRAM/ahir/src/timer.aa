$pipe time_val : $uint<64> $signal

$module [timerDaemon] $in () $out () $is
{
	$branchblock[loop] {
		$dopipeline $depth 7 $fullrate
			$merge $entry $loopback
				$phi COUNTER := $zero<64> $on $entry nCOUNTER $on $loopback
			$endmerge
	
				$volatile nCOUNTER := (COUNTER + 1)
				time_val := COUNTER
		$while 1
	}
}
